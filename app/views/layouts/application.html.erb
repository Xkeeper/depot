<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %>">
    <div id="banner">
        <%= image_tag("logo.png") %>
        <%= @page_title || 'Pragmatic Bookshelf' %>
    </div>
    <div id="columns">
      <div id="side">
        <div id="time">
          Time now: <%= Time.now.asctime %>
        </div>
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">FAQ</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>

</body>
</html>
